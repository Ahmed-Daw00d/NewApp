@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items View</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Items" asp-action="new" class="btn btn-primary"><i class="bi bi-patch-plus"></i> &nbsp; Add New Item</a>
        </div>
    </div>
</div>



<table class="table table-bordered  table-striped" style="width:100%">
    <thead>
     <tr class="table table-hover" >
        <th scope="col">
         Item Name
        </th>
        <th scope="col">
         Item Price
        </th>
         <th scope="col">
          Date
         </th>
            <th scope="col">
                
            </th>
            <th scope="col">
                
            </th>
     </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class=" table-secondary">
                <td scope="row" class="table-primary">@item.Name</td>
                <td>@item.Price</td>
                <td>@item.CreatedDate</td>
                <td> <a asp-controller="" asp-action="" class="btn btn-success"><i class="bi bi-pen-fill"></i> &nbsp; edit</a></td>
                <td> <a asp-controller="" asp-action="" class="btn btn-danger"><i class="bi bi-trash3"></i> &nbsp; delet</a></td>
                
            </tr>
            
        }
    </tbody>
</table>

